<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    android:background="@drawable/round_white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dips_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:civ_border_width="3dp"
        app:civ_border_color="#20948B"/>

    <TextView
        android:id="@+id/dips_rec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="요리이름"
        android:layout_below="@id/dips_image"
        android:layout_marginHorizontal="10dp"
        android:textAlignment="center"
        android:textColor="#6BB4AE"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/dips_heart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@id/dips_rec"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="20dp"
        app:srcCompat="@drawable/outline_favorite_24"
        app:tint="#EE9BBB" />

</RelativeLayout>