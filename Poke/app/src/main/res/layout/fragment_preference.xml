<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:background="@color/green">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Head1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:text="어떤 음식을 좋아하나요?"
            android:textColor="@color/black"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/sub_head"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="취향에 맞게 레시피를 추천받을 수 있습니다. \n좋아하는 음식을 탭 하세요"
            android:textColor="#08660A"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/Head1"
            app:layout_constraintTop_toBottomOf="@id/Head1"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_fileName="chefs.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:layout_constraintTop_toBottomOf="@id/sub_head"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottomSheet1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_shadow"
        android:orientation="vertical"
        app:layout_scrollFlags="noScroll"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/preOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/preChip1"
                style="@style/CustomChipStyle"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text=" 탕 "
                android:textAlignment="center"
                android:textSize="17sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preChip2"
                style="@style/CustomChipStyle"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text="찌개"
                android:textAlignment="center"
                android:textSize="17sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preChip4"
                style="@style/CustomChipStyle"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text=" 면 "
                android:textAlignment="center"
                android:textSize="17sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preChip5"
                style="@style/CustomChipStyle"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text="만두"
                android:textAlignment="center"
                android:textSize="17sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preChip3"
                style="@style/CustomChipStyle"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="디저트"
                android:textAlignment="center"
                android:textSize="17sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preChip6"
                style="@style/CustomChipStyle"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text=" 밥 "
                android:textAlignment="center"
                android:textSize="17sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/preChip7"
                style="@style/CustomChipStyle"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text=" 죽 "
                android:textAlignment="center"
                android:textSize="17sp" />

            <com.google.android.material.chip.Chip
