<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.poke">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_image"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_image_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Poke"
        android:usesCleartextTraffic="true"
        android:name = ".MyApplication"
        android:hardwareAccelerated="true"
        >
        <meta-data
            android:name="android.max_aspect"
            android:value="2.1"/>

        <activity
            android:name=".LoadingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".RatingActivity">
        </activity>
        <activity android:name=".SignUpActivity">
        </activity>
        <activity android:name=".PasswordResetActivity">
        </activity>
        <activity android:name=".MemberInitActivity">
        </activity>
        <activity android:name=".CheckAllergyActivity">
        </activity>
        <activity android:name=".IngredientAddActivity">
        </activity>
        <activity android:name=".PreferenceActivity">
        </activity>
        <activity android:name=".Adddips">
        </activity>
        <activity android:name=".Recipe_Info">
        </activity>
        <activity android:name=".Recipe_step_Activity">
        </activity>
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <!-- 팝업 Activity -->

        <service
            android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <activity android:name=".CrashedActivity">
        </activity>

        <activity android:name=".MainMoreViewActivity">
        </activity>


        <receiver android:name=".MyAlarmReceiver"
            android:enabled="true"
            android:exported="true"></receiver>



    </application>


</manifest>